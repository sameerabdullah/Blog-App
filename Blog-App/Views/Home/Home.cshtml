@model List<Blog_App.Models.Blog>
<a asp-action="CreateBlog"><button type="submit" class="mt-3 btn btn-primary">Create Blog</button></a>
<!-- Checking is Model contain any object -->
@if (Model != null)
{
    <!-- Iterating Blogs -->
    @foreach (Blog_App.Models.Blog obj in Model)
    {
        <a class="card-link text-dark m-0" asp-action="ViewBlog" asp-route-id="@obj.Id">
            <div class="row p-4 border m-0 mt-3 mb-3 trans">
                <img class="col-lg-3 col-md-6 col-12 mb-md-0 mb-3 rounded-circle img-height" src=@obj.UserImage />
                <div class="col-lg-9 col-md-6 col-12">
                    <div class="row m-0">
                        <div class="col-12 p-0">
                            <p class="d-inline mr-2 text-primary">@obj.Username</p>
                            <p class="d-inline">@obj.Date</p>
                            <div class="line"></div>
                            <p class="display-4">@obj.Title</p>
                            <p class="text-justify">@obj.Content</p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
}