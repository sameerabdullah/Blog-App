@using Blog_App.Models
@model CBlog
<form method="post" action="/Home/UpdateBlog" class="container form-style">
    <p class="display-4">Update Your Post</p>
    <div class="line"></div>
    <p class="text-danger">
        <!-- Checking is Model contain any object -->
        @if (Model != null)
        {@Model.Error}
    </p>
    <div class="form-group">
        <label asp-for="Title">Title*</label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content">Content*</label>
        <textarea class="form-control" asp-for="Content" rows="8"></textarea>
        <span asp-validation-for="Content"></span>
    </div>
    <input asp-for="Id" type="hidden" >
    <button type="submit" class="btn btn-primary">Post</button>
</form>